@model TournamentDetailsModel

@{
    ViewBag.Title = "Tournament Results";
}

<h2>@ViewBag.Title</h2>

<div class="navbar">
    <div class="navbar-inner">
        <ul class="nav">
            @foreach (var tournament in Model.Tournaments)
            {
                @Html.MenuItem(tournament.Name, "Tournament", "Results", new { id = tournament.Id },
                    isActive: tournament.Id == Model.SelectedTournamentId)
            }
        </ul>
    </div>
</div>

<div class="row">
    <div class="span5">
        <h4>@Html.TournamentLink(Model.TournamentResults.Tournament.Id, Model.TournamentResults.Tournament.Name)</h4>
        @Html.Partial("TournamentMatchResults", Model.TournamentResults.MatchResults)
    </div>
    <div class="span7">
        @Html.Partial("TournamentStandings", Model.TournamentResults.Standings)
    </div>
</div>