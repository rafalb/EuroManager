@model EuroManager.WorldSimulator.Presentation.Web.Models.MatchResultModel

@using EuroManager.WorldSimulator.Services.Data

@{
    ViewBag.Title = "Match Details";
}

<div>
    <div>
        <strong>@Model.Result.Team1Name @Model.Result.Score1 : @Model.Result.Score2 @Model.Result.Team2Name</strong>
    </div>
    <div>
        @GoalScorers(Model.Result.Goals1) &mdash; @GoalScorers(Model.Result.Goals2)
    </div>

    @PlayerStats(Model.Result.Team1Name, Model.Result.PlayersStats1)
    @PlayerStats(Model.Result.Team2Name, Model.Result.PlayersStats2)

    @helper GoalScorers(IEnumerable<Goal> goals)
    {
        @String.Join(", ", goals.Select(FormatGoalInfo))
    }

    @functions
    {
        private string FormatGoalInfo(Goal goal)
        {
            if (goal.Extended > 0)
            {
                return String.Format("{0} {1}+{2}", goal.ScorerName, goal.Minute, goal.Extended);
            }
            else
            {
                return String.Format("{0} {1}", goal.ScorerName, goal.Minute);
            }
        }
    }

    @helper PlayerStats(string teamName, IEnumerable<PlayerMatchStats> playerStats)
    {
        <div>
            <h4>Player stats: @teamName</h4>
            <table>
                <thead>
                    <tr>
                        <td>Player</td>
                        <td>Goals</td>
                        <td>Assists</td>
                        <td>Rating</td>
                    </tr>
                </thead>
                @foreach (var player in playerStats)
                {
                    <tr>
                        <td>@player.PlayerName</td>
                        <td>@player.Goals</td>
                        <td>@player.Assists</td>
                        <td>@player.Rating</td>
                    </tr>
                }
            </table>
        </div>
    }
</div>
