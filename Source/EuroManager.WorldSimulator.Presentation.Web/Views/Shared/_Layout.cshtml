<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>EuroManager - @ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        @Styles.Render("~/Content/bootstrap")
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    @Html.ActionLink("EuroManager", "Index", "Home", null, new { @class = "brand" })
                    <ul class="nav">
                        @Html.MenuItem("Start", "Index", "Home")
                        @Html.MenuItem("Results", "Recent", "Results")
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                World
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                @Html.MenuItem("Competitions", "", "")
                                @Html.MenuItem("Teams", "", "")
                                @Html.MenuItem("Players", "", "")
                                @Html.MenuItem("Transfers", "", "")
                                @Html.MenuItem("Rankings", "", "")
                            </ul>
                        </li>
                        @if (User.IsInRole(UserRole.Administrator))
                        {
                            <li class="dropdown active">
                                <a class="dropdown-toggle btn-danger" data-toggle="dropdown" href="#">
                                    Admin
                                    <b class="caret"></b>
                                </a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>@Html.ActionLink("Advance date", "AdvanceDate", "World")</li>
                                </ul>
                            </li>
                        }
                    </ul>
                    <div class="pull-right">
                        @Html.Partial("_LoginPartial")
                    </div>
                    <form class="navbar-search pull-right">
                      <input type="text" class="search-query" placeholder="Search">
                    </form>
                    <div class="pull-right">
                        <ul class="nav">
                            <li class="active"><a>@Html.Action("WorldDate", "World")</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        @if (IsSectionDefined("PageHeader"))
        {
            @RenderSection("PageHeader", required: false);
        }
        else
        {
            <header class="page-header">
                <div class="container">
                </div>
            </header>
        }
        <div class="container">
            @RenderBody()
        </div>
        <div class="row footer">
            <div class="container">
                <p>&copy; 2012-@DateTime.Now.Year by Rafał Barszczewski</p>
            </div>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>
